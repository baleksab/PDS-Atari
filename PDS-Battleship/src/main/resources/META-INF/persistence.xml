<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="PDS-Battleship">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>baleksab.pdsbattleship.entity.Player</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:${user.home}/PDS-Battleship.db"/>
      <property name="jakarta.persistence.jdbc.user" value=""/>
      <property name="jakarta.persistence.jdbc.password" value=""/>

      <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>

      <!-- HikariCP properties -->
      <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
      <property name="hibernate.hikari.dataSource.url" value="jdbc:sqlite:${user.home}/PDS-Battleship.db"/>
      <property name="hibernate.hikari.maximumPoolSize" value="10"/> <!-- Adjust as needed -->
      <property name="hibernate.hikari.idleTimeout" value="30000"/> <!-- Adjust as needed -->
      <property name="hibernate.hikari.dataSource.user" value=""/>
      <property name="hibernate.hikari.dataSource.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
